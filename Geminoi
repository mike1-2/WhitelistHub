local script_disabled = false

local allowedHWIDs = {
    ["06ab7cf52f6f452e94e0111b2a5b4c6e"] = true, -- ตัวอย่าง HWID ที่ hash แล้ว
}

local raw_hwid = game:GetService("RbxAnalyticsService"):GetClientId()
local hwid = raw_hwid
if syn and syn.crypt then
    hwid = syn.crypt.hash(raw_hwid)
end

if script_disabled then
    game:GetService("Players").LocalPlayer:Kick("Script นี้ถูกปิดใช้งานโดยเจ้าของ")
    return
end

if not allowedHWIDs[hwid] then
    game:GetService("Players").LocalPlayer:Kick("Script ค่ายกูไม่ได้เป็นกระหรี่เหมือนแม่มึง")
    return
end

print("Check Hwid Success")
